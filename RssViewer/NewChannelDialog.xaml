<Window x:Class="RssViewer.NewChannelDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New channel" Height="200" Width="400"
         MinHeight="200" MinWidth="400"
         MaxHeight="200" MaxWidth="400"
        Background="Black">
    <Grid>
        <StackPanel Orientation="Vertical" Background="Black">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="40, 30, 40, 10">
                <TextBlock Foreground="White" FontSize="14" Margin="0, 0, 20, 0">Enter feed url:</TextBlock>
                <TextBox Width="200" x:Name="urlTextBox"></TextBox>
            </StackPanel>
            <TextBlock x:Name="validationBlock" Margin="20, 0" Foreground="LightPink" TextAlignment="Center"></TextBlock>
            <TextBlock x:Name="addFeedButton" Background="DarkOrchid" Margin="60, 30, 60, 30" Foreground="White" TextAlignment="Center" MouseLeftButtonDown="addFeedButton_MouseLeftButtonDown">Add feed</TextBlock>
        </StackPanel>
    </Grid>
</Window>
